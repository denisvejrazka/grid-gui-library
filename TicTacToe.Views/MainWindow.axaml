<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TicTacToe.Views.MainWindow"
        Title="TicTacToe.Views">
    <DockPanel>
    <!-- Horní panel s tlačítky Save a Load -->
    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="10">
      <Button x:Name="SaveButton" Content="Save" Margin="0,0,10,0" />
      <Button x:Name="LoadButton" Content="Load" />
    </StackPanel>

    <!-- Zbytek okna - Canvas, na který budeme kreslit mřížku -->
    <Canvas x:Name="TicTacToeBackground" Background="White" />
  </DockPanel>
</Window>
